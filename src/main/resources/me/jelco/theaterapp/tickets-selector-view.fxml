<AnchorPane prefHeight="610.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label layoutX="35.0" layoutY="35.0" text="Sell tickets">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Text fx:id="selectedText" layoutX="35.0" layoutY="77.0" strokeType="OUTSIDE" strokeWidth="0.0" text="No showing selected" />
      <GridPane fx:id="seatSelector" layoutX="35.0" layoutY="85.0" prefHeight="389.0" prefWidth="705.0">
      </GridPane>
      <ListView fx:id="seatList" disable="true" layoutX="765.0" layoutY="85.0" prefHeight="389.0" prefWidth="200.0" />
      <TextField fx:id="customerInput" layoutX="35.0" layoutY="504.0" prefHeight="25.0" prefWidth="705.0" promptText="Customer name" />
      <Button fx:id="sellButton" layoutX="35.0" layoutY="555.0" mnemonicParsing="false" onAction="#onSellClick" text="Sell x tickets">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="cancelButton" layoutX="159.0" layoutY="555.0" mnemonicParsing="false" onAction="#onCancelClick" text="Cancel">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
    </children>
