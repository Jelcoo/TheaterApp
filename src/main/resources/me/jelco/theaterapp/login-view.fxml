<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Text layoutX="435.0"
              layoutY="220.0"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Login"
              textAlignment="CENTER"
              wrappingWidth="130.0">
            <font>
                <Font size="52.0"/>
            </font>
        </Text>
        <TextField layoutX="424.0"
                   layoutY="244.0"
                   prefWidth="150.0"
                   promptText="Username"
                   fx:id="username"/>
        <PasswordField layoutX="424.0"
                       layoutY="277.0"
                       prefWidth="150.0"
                       promptText="Password"
                       fx:id="password"/>
        <Text layoutX="424.0"
              layoutY="320"
              fill="#ff0000"
              fx:id="messageText"/>
        <Button layoutX="424.0"
                layoutY="330.0"
                mnemonicParsing="false"
                prefHeight="30.0"
                prefWidth="150.0"
                onAction="#onLoginButtonClick"
                text="Login"/>
    </children>
</AnchorPane>
