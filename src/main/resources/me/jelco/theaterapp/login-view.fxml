<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox minWidth="250" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Text text="Login" />
      <Text fx:id="messageText" fill="RED" />
      <TextField fx:id="username" promptText="Username" />
      <TextField fx:id="password" accessibleRole="PASSWORD_FIELD" promptText="Password" />
      <HBox spacing="10">
         <children>
            <Button onAction="#onLoginButtonClick" text="Login" />
         </children>
      </HBox>
   </children>
</VBox>
